{%- liquid
	assign share_url = shop.url | append: product.url
	assign share_description = product.description | strip_html | truncatewords: 15 | url_param_escape
  assign share_image = product.featured_image | image_url: width: 750 | prepend: 'https:'
  assign action = "javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"
-%}

<ul class="social-share ls-none d-flex fw-nowrap">
  <li class="{{enable_facebook | replace: false, 'd-none' | replace: true, 'd-block'}}">
    <a aria-label="Facebook" class="social-share-link btn btn-icon btn-small btn-plain" href="https://www.facebook.com/sharer.php?u={{ share_url }}" onclick="{{ action }}">
      {%- render 'icon-facebook',  -%}
      <span class="visually-hidden">Facebook</span>
    </a>
  </li>
  <li class="{{enable_x | replace: false, 'd-none' | replace: true, 'd-block'}}">
    <a aria-label="Twitter" class="social-share-link btn btn-icon btn-small btn-plain" href="https://x.com/share?text={{ product.title }}&url={{ share_url }}" onclick="{{ action }}">
      {%- render 'icon-x',  -%}
      <span class="visually-hidden"> X </span>
    </a>
  </li>
  <li class="{{enable_pinterest | replace: false, 'd-none' | replace: true, 'd-block'}}">
    <a aria-label="Pinterest" class="social-share-link btn btn-icon btn-small btn-plain" href="https://pinterest.com/pin/create/button/?url={{ share_url }}&media={{ share_image }}&description={{ share_description }}" onclick="{{ action }}">
      {%- render 'icon-pinterest',  -%}
      <span class="visually-hidden"> Pinterest </span>
    </a>
  </li>
  <li class="{{enable_email | replace: false, 'd-none' | replace: true, 'd-block'}}">
    <a aria-label="Email" class="social-share-link btn btn-icon btn-small btn-plain" {% unless content_for_header contains 'Shopify.designMode' %} href="mailto:?subject={{ product.title }}&body={{ product.title }}%0D%0A{{ share_url }}" onclick="{{ action }}"{% endunless %}>
      {%- render 'icon-mail',  -%}
      <span class="visually-hidden">Email</span>
    </a>
  </li>
  <li class="d-none">
    <button data-link-copied-to-clipboard="{{ 'general.share.link_copied_to_clipboard' | t }}" class="btn-plain social-share-link d-flex middle-xs w-100 js-social-share-copy-link bg-transparent pt-12 pr-24 pb-12 pl-24 c-pointer fs-body ff-body">
      {%- render 'icon-link',  -%}
      <span class="js-social-share-copy-link-label ">
        {{ 'general.share.copy_link' | t }}
      </span>
    </button>
  </li>
</ul>



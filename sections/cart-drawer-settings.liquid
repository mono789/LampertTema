{{ 'sliding-cart.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Conf. Carrito Deslizante",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Configuración General"
    },
    {
      "type": "checkbox",
      "id": "enable_sliding_cart",
      "label": "Activar carrito deslizante",
      "default": true,
      "info": "Habilita o deshabilita completamente el carrito deslizante"
    },
    {
      "type": "select",
      "id": "cart_position",
      "label": "Posición del carrito",
      "options": [
        {
          "value": "right",
          "label": "Derecha"
        },
        {
          "value": "left",
          "label": "Izquierda"
        }
      ],
      "default": "right",
      "info": "Desde qué lado se desliza el carrito"
    },
    {
      "type": "range",
      "id": "cart_width",
      "min": 350,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Ancho del carrito",
      "default": 450,
      "info": "Ancho en píxeles del panel del carrito"
    },
    {
      "type": "header",
      "content": "Comportamiento del Carrito"
    },
    {
      "type": "range",
      "id": "cart_auto_close_delay",
      "min": 0,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "label": "Tiempo de auto-cierre",
      "default": 8000,
      "info": "Tiempo en milisegundos antes de cerrar automáticamente (0 = deshabilitado)"
    },
    {
      "type": "checkbox",
      "id": "show_cart_count",
      "label": "Mostrar contador de productos",
      "default": true,
      "info": "Muestra el número de productos en el botón del carrito"
    },
    {
      "type": "checkbox",
      "id": "show_cart_total",
      "label": "Mostrar total del carrito",
      "default": true,
      "info": "Muestra el total de la compra en el carrito"
    },
    {
      "type": "header",
      "content": "Sistema de Recomendaciones"
    },
    {
      "type": "checkbox",
      "id": "show_cart_recommendations",
      "label": "Mostrar recomendaciones en el carrito",
      "default": true,
      "info": "Habilita la sección de productos recomendados"
    },
    {
      "type": "range",
      "id": "cart_recommendations_limit",
      "min": 3,
      "max": 10,
      "step": 1,
      "label": "Número máximo de recomendaciones",
      "default": 6,
      "info": "Cantidad de productos recomendados a mostrar"
    },
    {
      "type": "select",
      "id": "recommendations_source",
      "label": "Fuente de recomendaciones",
      "options": [
        {
          "value": "manual",
          "label": "Manual (Metafields/Tags)"
        },
        {
          "value": "automatic",
          "label": "Automática (Shopify)"
        },
        {
          "value": "hybrid",
          "label": "Híbrida (Manual + Automática)"
        }
      ],
      "default": "hybrid",
      "info": "Cómo se seleccionan los productos recomendados"
    },
    {
      "type": "checkbox",
      "id": "show_recommendations_title",
      "label": "Mostrar título de recomendaciones",
      "default": true,
      "info": "Muestra el título 'También te puede interesar'"
    },
    {
      "type": "text",
      "id": "recommendations_title",
      "label": "Título de recomendaciones",
      "default": "También te puede interesar",
      "info": "Texto personalizable para la sección de recomendaciones"
    },
    {
      "type": "header",
      "content": "Configuración Visual"
    },
    {
      "type": "color",
      "id": "cart_background_color",
      "label": "Color de fondo del carrito",
      "default": "#000000",
      "info": "Color principal del fondo del carrito"
    },
    {
      "type": "color",
      "id": "cart_text_color",
      "label": "Color del texto",
      "default": "#ffffff",
      "info": "Color del texto principal"
    },
    {
      "type": "color",
      "id": "cart_accent_color",
      "label": "Color de acento",
      "default": "#ff6b6b",
      "info": "Color para botones y elementos destacados"
    },
    {
      "type": "checkbox",
      "id": "show_product_images",
      "label": "Mostrar imágenes de productos",
      "default": true,
      "info": "Muestra las imágenes de los productos en el carrito"
    },
    {
      "type": "checkbox",
      "id": "show_variant_titles",
      "label": "Mostrar títulos de variantes",
      "default": false,
      "info": "Muestra las variantes de los productos (color, tamaño, etc.)"
    },
    {
      "type": "header",
      "content": "Configuración Avanzada"
    },
    {
      "type": "checkbox",
      "id": "enable_quantity_controls",
      "label": "Controles de cantidad",
      "default": true,
      "info": "Permite cambiar cantidades directamente en el carrito"
    },
    {
      "type": "checkbox",
      "id": "enable_remove_buttons",
      "label": "Botones de eliminar",
      "default": true,
      "info": "Muestra botones para eliminar productos individuales"
    },
    {
      "type": "checkbox",
      "id": "show_toast_notifications",
      "label": "Notificaciones toast",
      "default": true,
      "info": "Muestra notificaciones temporales para acciones del carrito"
    },
    {
      "type": "range",
      "id": "toast_duration",
      "min": 1000,
      "max": 5000,
      "step": 500,
      "unit": "ms",
      "label": "Duración de notificaciones",
      "default": 3000,
      "info": "Tiempo que se muestran las notificaciones"
    }
  ],
  "presets": [
    {
      "name": "Carrito Deslizante",
      "category": "Carrito"
    }
  ]
}
{% endschema %}
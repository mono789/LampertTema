{% schema %}
{
  "name": "Imagen con bot贸n Lampert",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Imagen de escritorio"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Imagen m贸vil"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del bot贸n",
      "default": "COMPRAR AHORA"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Enlace"
    }
  ],
  "presets": [
    {
      "name": "Imagen con bot贸n Lampert"
    }
  ]
}
{% endschema %}

<div class="contenedor collabdesk">
  <a href="{{ section.settings.link_url }}">
    <img src="{{ section.settings.desktop_image | img_url: 'master' }}">
    {% if section.settings.button_text != blank %}
      <div class="centrado"><u>{{ section.settings.button_text }}</u></div>
    {% endif %}
  </a>
</div>
<div class="contenedor collabmob" style="display:none;">
  <a href="{{ section.settings.link_url }}">
    <img src="{{ section.settings.mobile_image | img_url: 'master' }}">
    {% if section.settings.button_text != blank %}
      <div class="centrado"><u>{{ section.settings.button_text }}</u></div>
    {% endif %}
  </a>
</div>

<style>
.contenedor {
    position: relative;
    display: inline-block;
    text-align: center;
}
.contenedor:before {
    background: linear-gradient(0deg, rgba(2,0,36,0) 0%, rgba(0,0,0,0.8379726890756303) 100%);
}
.contenedor a {
    font-size: 15px;
    color: white;
    text-decoration: none;
}
.contenedor a:hover {
    font-size: 13px;
}
.centrado {
    position: absolute;
    top: 75%;
    left: 73%;
    transform: translate(-50%, -50%);
    background-color: black;
}
@media(max-width: 620px) {
    .collabdesk {
        display: none;
    }
    .collabmob {
        display: inline-block !important;
        margin-bottom: 30px;
    }
    .centrado {
        position: absolute;
        top: 76%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
}
</style>
